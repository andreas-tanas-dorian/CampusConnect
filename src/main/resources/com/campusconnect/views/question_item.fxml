<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-border-color: #dfe6e9; -fx-border-radius: 5; -fx-background-radius: 5; -fx-background-color: #ffffff; -fx-padding: 8; -fx-spacing: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 3, 0, 0, 1);">

    <Label fx:id="contentLabel" wrapText="true" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #2d3436;"/>

    <Label fx:id="timeLabel" style="-fx-font-size: 11px; -fx-text-fill: #95a5a6;"/>

    <Button text="Answer &amp; Resolve" onAction="#handleResolve" maxWidth="Infinity"
            styleClass="button" style="-fx-font-weight: bold;"/>
</VBox>