<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campusconnect.controllers.CommentsController"
      stylesheets="@../styles.css">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label fx:id="postLabel" text="Post Content Here" style="-fx-font-weight: bold;"/>
    <ListView fx:id="commentsList" prefHeight="300"/>

    <TextField fx:id="commentInput" promptText="Write a comment..."/>
    <Button text="Add Comment" onAction="#handleAddComment" maxWidth="Infinity"/>
</VBox>