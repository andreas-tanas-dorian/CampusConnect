<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campusconnect.controllers.InboxController"
      stylesheets="@../styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="My Inbox" styleClass="heading-small"/>

    <Label fx:id="statusLabel" text="Loading..." style="-fx-text-fill: #95a5a6;"/>

    <ListView fx:id="notificationList" VBox.vgrow="ALWAYS"/>

</VBox>