<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.campusconnect.controllers.MainLayoutController"
            prefHeight="600.0" prefWidth="900.0">

    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Campus Connect" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="currentUserLabel" text="User: ..." style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>

            <Button text="Feed" onAction="#showFeed" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <Button text="Profile" onAction="#showProfile" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <Button text="Leaderboard" onAction="#showLeaderboard" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <Button text="Inbox" onAction="#showInbox" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <Button text="Q&amp;A Queue" onAction="#showQuestions" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <Button text="Groups" onAction="#showGroups" maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT; -fx-cursor: hand;"/>

            <VBox VBox.vgrow="ALWAYS" />

            <Button text="Ask Question" onAction="#handleAskPopup" maxWidth="Infinity"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

            <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity"
                    style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-cursor: hand; -fx-margin-top: 20;"/>
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <center>
                <Label text="Welcome to Campus Connect" style="-fx-text-fill: #7f8c8d; -fx-font-size: 20px;"/>
            </center>
        </BorderPane>
    </center>

</BorderPane>