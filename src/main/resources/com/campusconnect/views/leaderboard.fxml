<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campusconnect.controllers.LeaderboardController"
      spacing="15" alignment="CENTER"
      stylesheets="@../styles.css">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="ðŸ† Campus Leaderboard" styleClass="heading"/>

    <Label text="Top students by contribution score" style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"/>

    <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameCol" text="Student" prefWidth="180"/>
            <TableColumn fx:id="groupCol" text="Group" prefWidth="100"/>
            <TableColumn fx:id="scoreCol" text="Score" prefWidth="100" style="-fx-alignment: CENTER;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>