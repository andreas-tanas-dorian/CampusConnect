<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER_LEFT"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campusconnect.controllers.AskQuestionController"
      stylesheets="@../styles.css"
      styleClass="popup-window">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Post a New Question" styleClass="heading-small"/>

    <Label text="Describe your issue clearly:" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>

    <TextArea fx:id="questionInput"
              promptText="e.g. How do I fix the NullPointerException in the login service?"
              wrapText="true"
              prefHeight="120"
              styleClass="text-area-custom"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="button, cancel-button"/>
        <Button text="Submit Question" onAction="#handleSubmit" defaultButton="true" styleClass="button"/>
    </HBox>

</VBox>